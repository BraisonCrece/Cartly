<div class="min-h-[calc(100vh-8rem)] flex items-center justify-center w-full px-4 py-8">
  <div class="w-full max-w-2xl">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white"><%= t('.title') %></h1>
      <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Configura las opciones de tu restaurante</p>
    </div>

    <div class="bg-white dark:bg-gray-900 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
      <%= form_with(model: @settings,
          data: { turbo: false },
          class: "p-4 pt-0 space-y-6") do |f| %>

        <% if @settings.errors.any? %>
          <div id="error_explanation" role="alert" aria-live="polite" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
            <h2 class='mb-2 font-semibold'>
              <%= t('.errors.header', count: @settings.errors.count) %>
            </h2>
            <ul class="ml-5 list-disc">
              <% @settings.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="space-y-1">
          <%= f.label :root_page, t('.labels.root_page'),
              class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.select :root_page,
              [[t('.options.carta'), "carta"], [t('.options.menu'), "menu"]],
              {},
              class: "w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-gray-800 dark:text-white transition-colors" %>
        </div>

        <div class="space-y-1">
          <%= f.label :show_toggler, t('.labels.show_toggler'),
              class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.select :show_toggler,
              [[t('.options.show'), true], [t('.options.hide'), false]],
              {},
              class: "w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-gray-800 dark:text-white transition-colors" %>
        </div>

        <div class="border-t border-gray-200 dark:border-gray-700 pt-6">
          <div class="space-y-1">
            <%= f.label :locale_toggler, t('.labels.locale_toggler'),
                class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
            <%= f.select :locale_toggler,
                [[t('.options.show'), true], [t('.options.hide'), false]],
                {},
                class: "w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-gray-800 dark:text-white transition-colors" %>
          </div>
        </div>

        <div class="border-t border-gray-200 dark:border-gray-700 pt-6">
          <div class="space-y-1">
            <%= f.label :menu_price, t('.labels.menu_price'),
                class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
            <%= f.number_field :menu_price,
                step: :any,
                class: "w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-gray-800 dark:text-white transition-colors",
                placeholder: "Precio del menú" %>
          </div>
        </div>

        <div class="pt-6">
          <%= f.submit t('.buttons.save'),
              class: "w-full py-3 px-4 bg-sky-600 hover:bg-sky-700 focus:ring-4 focus:ring-sky-500 focus:ring-opacity-50 text-white font-medium rounded-lg transition-colors cursor-pointer" %>
        </div>
      <% end %>

      <div class="px-8 py-6 bg-gray-50 dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700">
        <div class="text-center">
          <%= link_to "Atrás", "javascript:history.back()",
              class: 'text-sky-600 hover:text-sky-700 font-medium transition-colors' %>
        </div>
      </div>
    </div>
  </div>
</div>
