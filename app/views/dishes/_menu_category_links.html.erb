<% @menu_categories.each do |category| %>
  <% next if category.dishes.blank? %>
  <%= link_to category.name.gsub(/[\p{Emoji_Presentation}\u{FE0F}]|[\u{1F600}-\u{1F64F}\u{1F37D}]/, ""),
              "#category-#{category.id}",
              class: "text-lg font-light italic align-middle text-center font-medium text-blue-950 subpixel-antialiased hover:text-teal-900 dark:text-emerald-100",
              data: { turbo_frame: "_top", controller: "scroll", action: "click->scroll#scrollToCategory" } %>
<% end %>
