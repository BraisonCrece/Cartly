<div class="email-container">
  <p><%= t('.greeting', recipient: @resource.email) %></p>

  <p><%= t('.requested') %></p>

  <p><%= link_to t('.change_link'),
         edit_password_url(@resource, reset_password_token: @token),
         class: "button-link" %></p>

  <p><%= t('.ignore') %></p>
  <p><%= t('.wont_change') %></p>
</div>
