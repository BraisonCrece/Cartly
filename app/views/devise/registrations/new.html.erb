<div class="flex flex-col w-[90%] max-w-sm">
  <h2 class='my-4 text-4xl text-center'><%= t('.title') %></h2>

  <%= form_for(resource,
      as: resource_name,
      url: registration_path(resource_name),
      html: {
        class: 'flex flex-col rounded-[3px] shadow p-8 dark:shadow-gray-600'
      }) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-2">
      <%= f.label :name, t('.restaurant_name'),
          class: "font-semibold text-sm text-gray-600 pb-1 block dark:text-gray-200" %>
      <%= f.text_field :name,
          autofocus: true,
          class: "placeholder:italic placeholder:text-gray-700 placeholder:font-extralight border rounded-[3px] px-3 py-2 mt-1 mb-5 text-sm w-full dark:text-gray-800" %>
    </div>

    <div class="mb-2">
      <%= f.label :email,
          class: "font-semibold text-sm text-gray-600 pb-1 block dark:text-gray-200" %>
      <%= f.email_field :email,
          autocomplete: "email",
          class: "placeholder:italic placeholder:text-gray-700 placeholder:font-extralight border rounded-[3px] px-3 py-2 mt-1 mb-5 text-sm w-full dark:text-gray-800" %>
    </div>

    <div class="mb-2">
      <%= f.label :password,
          class: "font-semibold text-sm text-gray-600 pb-1 block dark:text-gray-200" %>
      <% if @minimum_password_length %>
        <em class='text-xs dark:text-gray-200'>
          <%= t('.min_chars', length: @minimum_password_length) %>
        </em>
      <% end %>
      <%= f.password_field :password,
          autocomplete: "new-password",
          class: "placeholder:italic placeholder:text-gray-700 placeholder:font-extralight border rounded-[3px] px-3 py-2 mt-1 mb-5 text-sm w-full dark:text-gray-800" %>
    </div>

    <div class="mb-2">
      <%= f.label :password_confirmation,
          class: "font-semibold text-sm text-gray-600 pb-1 block dark:text-gray-200" %>
      <%= f.password_field :password_confirmation,
          autocomplete: "new-password",
          class: "placeholder:italic placeholder:text-gray-700 placeholder:font-extralight border rounded-[3px] px-3 py-2 mt-1 mb-5 text-sm w-full dark:text-gray-800" %>
    </div>

    <div class="mb-2">
      <%= f.submit t('.sign_up'),
          class: "p-2 w-full bg-sky-800 rounded-[3px] text-white font-bold active:bg-sky-950 cursor-pointer" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
