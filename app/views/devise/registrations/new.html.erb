<div class="flex flex-col w-[90%] max-w-sm">
  <h2 class='my-4 text-4xl text-center'>Registro</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'flex flex-col rounded-[3px] shadow p-8 dark:shadow-gray-600'}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="mb-2">
      <%= f.label :name, class: "font-semibold text-sm text-gray-600 pb-1 block dark:text-gray-200" %>
      <%= f.text_field :name, autofocus: true, placeholder: "Restaurante Delicias", class: "placeholder:italic placeholder:text-gray-700 placeholder:font-extralight border rounded-[3px] px-3 py-2 mt-1 mb-5 text-sm w-full dark:text-gray-800" %>
    </div>
    <div class="mb-2">
      <%= f.label :email, class: "font-semibold text-sm text-gray-600 pb-1 block dark:text-gray-200" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "jhon@doe.com", class: "placeholder:italic placeholder:text-gray-700 placeholder:font-extralight border rounded-[3px] px-3 py-2 mt-1 mb-5 text-sm w-full dark:text-gray-800" %>
    </div>
    <div class="mb-2">
      <%= f.label :password, class: "font-semibold text-sm text-gray-600 pb-1 block dark:text-gray-200" %>
      <% if @minimum_password_length %>
        <em class='text-xs dark:text-gray-200'>(<%= @minimum_password_length %> caracteres mínimo)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "SecurePassw0rd", class: "placeholder:italic placeholder:text-gray-700 placeholder:font-extralight border rounded-[3px] px-3 py-2 mt-1 mb-5 text-sm w-full dark:text-gray-800" %>
    </div>
    <div class="mb-2">
      <%= f.label :password_confirmation, class: "font-semibold text-sm text-gray-600 pb-1 block dark:text-gray-200" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "SecurePassw0rd", class: "placeholder:italic placeholder:text-gray-700 placeholder:font-extralight border rounded-[3px] px-3 py-2 mt-1 mb-5 text-sm w-full dark:text-gray-800" %>
    </div>
    <div class="mb-2">
      <%= f.submit "Rexístrate", class: "p-2 w-full bg-sky-800 rounded-[3px] text-white font-bold active:bg-sky-950 cursor-pointer" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
