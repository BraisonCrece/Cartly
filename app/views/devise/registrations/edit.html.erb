<div class="flex flex-col w-[90%] max-w-sm">
  <h2 class="my-4 text-4xl text-center">
    <%= t('.title', resource: resource_name.to_s.humanize) %>
  </h2>

  <%= form_for(resource,
      as: resource_name,
      url: registration_path(resource_name),
      html: {
        method: :put,
        class: 'flex flex-col rounded-[3px] shadow p-8 dark:shadow-gray-600'
      }) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-2">
      <%= f.label :email,
          class: "font-semibold text-sm text-gray-600 pb-1 block dark:text-gray-200" %>
      <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          class: "placeholder:italic placeholder:text-gray-700 placeholder:font-extralight border rounded-[3px] px-3 py-2 mt-1 mb-5 text-sm w-full dark:text-gray-800" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="mb-2 text-sm text-gray-600 dark:text-gray-200">
        <%= t('.waiting_confirmation', email: resource.unconfirmed_email) %>
      </div>
    <% end %>

    <div class="mb-2">
      <%= f.label :password,
          class: "font-semibold text-sm text-gray-600 pb-1 block dark:text-gray-200" %>
      <i class="text-xs dark:text-gray-200"><%= t('.leave_blank') %></i>
      <%= f.password_field :password,
          autocomplete: "new-password",
          class: "placeholder:italic placeholder:text-gray-700 placeholder:font-extralight border rounded-[3px] px-3 py-2 mt-1 mb-5 text-sm w-full dark:text-gray-800" %>
      <% if @minimum_password_length %>
        <em class="text-xs dark:text-gray-200">
          <%= t('.min_chars', length: @minimum_password_length) %>
        </em>
      <% end %>
    </div>

    <div class="mb-2">
      <%= f.label :password_confirmation,
          class: "font-semibold text-sm text-gray-600 pb-1 block dark:text-gray-200" %>
      <%= f.password_field :password_confirmation,
          autocomplete: "new-password",
          class: "placeholder:italic placeholder:text-gray-700 placeholder:font-extralight border rounded-[3px] px-3 py-2 mt-1 mb-5 text-sm w-full dark:text-gray-800" %>
    </div>

    <div class="mb-2">
      <%= f.label :current_password,
          class: "font-semibold text-sm text-gray-600 pb-1 block dark:text-gray-200" %>
      <i class="text-xs dark:text-gray-200"><%= t('.current_password_needed') %></i>
      <%= f.password_field :current_password,
          autocomplete: "current-password",
          class: "placeholder:italic placeholder:text-gray-700 placeholder:font-extralight border rounded-[3px] px-3 py-2 mt-1 mb-5 text-sm w-full dark:text-gray-800" %>
    </div>

    <div class="mb-2">
      <%= f.submit t('.update_button'),
          class: "p-2 w-full bg-sky-800 rounded-[3px] text-white font-bold active:bg-sky-950 cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-8 border-t pt-4 dark:border-gray-600">
    <h3 class="text-xl mb-4"><%= t('.cancel_account') %></h3>

    <p class="mb-4"><%= t('.unhappy') %></p>

    <%= button_to t('.cancel_account'),
        registration_path(resource_name),
        data: {
          confirm: t('.cancel_confirm'),
          turbo_confirm: t('.cancel_confirm')
        },
        method: :delete,
        class: "p-2 w-full bg-red-600 rounded-[3px] text-white font-bold active:bg-red-700 cursor-pointer" %>
  </div>

  <div class="mt-4">
    <%= link_to t('.back'), :back,
        class: "text-blue-500 hover:text-blue-700" %>
  </div>
</div>
