<% if resource.errors.any? %>
  <div id="error_explanation"
      data-turbo-cache="false"
      class="bg-red-50 border border-red-200 text-red-800 px-4 py-4 rounded-lg mb-6 dark:bg-red-900/20 dark:border-red-800 dark:text-red-200">
    <div class="flex items-start">
      <svg class="w-5 h-5 text-red-400 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
      </svg>
      <div>
        <h3 class="text-sm font-medium mb-2">
          <%= t('devise.shared.error_messages.problems',
                count: resource.errors.count,
                resource: resource.class.model_name.human.downcase) %>
        </h3>
        <ul class="text-sm space-y-1">
          <% resource.errors.full_messages.each do |message| %>
            <li class="flex items-start">
              <span class="w-1 h-1 bg-red-400 rounded-full mt-2 mr-2 flex-shrink-0"></span>
              <%= message %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
