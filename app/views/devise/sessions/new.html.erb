<div>
  <h2 class='text-center my-4 text-4xl'>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'flex flex-col rounded shadow-xl p-8'}) do |f| %>
    <div class="mb-2">
      <%= f.label :email, class: "font-semibold text-sm text-gray-600 pb-1 block" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border rounded-lg px-3 py-2 mt-1 mb-5 text-sm w-full" %>
    </div>
    <div class="mb-2">
      <%= f.label :password, "Contrasinal", class: "font-semibold text-sm text-gray-600 pb-1 block" %>
      <%= f.password_field :password , autocomplete: "current-password", class: "border rounded-lg px-3 py-2 mt-1 mb-5 text-sm w-full" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="mb-2">
        <%= f.check_box :remember_me, class: "rounded mr-2" %>
        <%= f.label :remember_me, "RecÃ³rdame"%>
      </div>
    <% end %>
    <div class="mb-2">
      <%= f.submit "Log in", class: "p-2 w-full bg-sky-800 rounded text-white font-bold" %>
    </div>
  <% end %>
  <%= render "devise/shared/links"%>
</div>
