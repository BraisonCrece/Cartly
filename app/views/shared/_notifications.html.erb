<%= turbo_frame_tag "#{current_restaurant&.id || 'default'}_notifications", class: "fixed top-0 left-0 right-0 p-2 flex flex-col items-center w-full z-50 pointer-events-none" do %>
    <% flash.each do |type, msg| %>
        <% notification_type = case type.to_sym
                                when :alert, :error
                                    :alert
                                else
                                    :notice
                                end %>
        <%= render "shared/notification", message: msg, type: notification_type %>
    <% end %>
<% end %>
