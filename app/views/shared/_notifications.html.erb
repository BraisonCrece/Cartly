<%= turbo_frame_tag "notifications", class: "fixed top-4 left-4 right-4 flex flex-col items-center z-50 pointer-events-none" do %>
    <% flash.each do |type, msg| %>
        <% notification_type = case type.to_sym
                                when :alert, :error
                                    :error
                                else
                                    :success
                                end %>
        <%= render "shared/notification", message: msg, type: notification_type %>
    <% end %>
<% end %>
