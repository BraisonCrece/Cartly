<div class="w-full flex mt-4 justify-center text-gray-700 dark:text-white">
    <div class="w-1/3 md:w-1/4 lg:w-1/6">
        <% if request.path =~ /\/carta|\/menu/ %>
            <% if @restaurant.logo.attached? %>
                <%= image_tag(
                        @restaurant.logo,
                        class: "w-full h-auto rounded-lg mb-1",
                        alt: @restaurant.name
                    )
                %>
            <% else %>
                <%= render "shared/logo" %>
            <% end %>
        <% end %>
    </div>
</div>
