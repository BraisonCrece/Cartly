<% if subscription_blocked? %>
  <div class="w-10 h-10 bg-gray-400 rounded-full text-white flex-shrink-0 cursor-not-allowed opacity-50 flex items-center justify-center"
       title="Necesitas una suscripción activa para añadir productos">
    <%= image_tag "plus.svg", class: "w-6 h-6 opacity-60", alt: t('.add_icon') %>
  </div>
<% else %>
  <%= link_to(
      path,
      class: 'w-10 h-10 bg-brand-red rounded-full hover:bg-brand-red text-white active:ring-2 active:ring-brand-red-light flex-shrink-0',
      aria: { label: t('.add') }
  ) do %>
    <%= image_tag "plus.svg", class: "w-10 h-10", alt: t('.add_icon') %>
  <% end %>
<% end %>
