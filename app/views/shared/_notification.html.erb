<%
  type ||= :success
  message ||= notice || alert
  
  icon_content = case type.to_sym
                 when :success
                   "✓"
                 when :error
                   "!"
                 else
                   "i"
                 end
%>

<div data-controller="notifications"
     class="notification-item pointer-events-auto mb-3 w-full max-w-md mx-auto"
     data-notifications-delay-value="5000"
     data-notifications-transition-duration-value="300"
     data-turbo-permanent
>
  <div class="notification-container notification-<%= type %> rounded-lg px-4 py-3 flex items-start gap-3 min-w-0">
    <div class="notification-icon">
      <%= icon_content %>
    </div>
    
    <div class="flex-1 min-w-0">
      <p class="text-sm font-medium leading-5 break-words">
        <%= message %>
      </p>
    </div>

    <button data-action="click->notifications#close" 
            type="button" 
            class="notification-close flex-shrink-0 w-6 h-6 flex items-center justify-center text-lg leading-none"
            aria-label="Close notification">
      ×
    </button>
  </div>
</div>