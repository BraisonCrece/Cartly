<% if products?(params[:restaurant_id]) %>
  <%= render "shared/info" %>
<% else %>
  <% if params[:restaurant_id] %>
    <div class="border rounded-md p-4 mt-24 flex max-w-md w-[80%] mx-auto">
      <div class="flex items-center justify-center gap-4">
        <%= image_tag "info.svg", class: "w-6", alt: t('.info_icon'), aria_hidden: "true" %>
        <p class="text-lg font-light italic prose-rose text-balance text-center">
          La carta está siendo diseñada, por favor, vuelva pronto!🙂
        </p>
      </div>
    </div>
  <% elsif request.path.include?('admin/productos') && !products?(current_restaurant.id, active: false) %>
    <div class="text-center">
      <p class="text-lg font-light italic">Añade tu primer plato 🍽️</p>
      <%= link_to "pulsa aquí", new_dish_path, class: "text-blue-600 hover:text-blue-800" %>
    </div>
  <% end %>
<% end %>
