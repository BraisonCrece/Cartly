<% if subscription_warning_message.present? %>
  <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6" id="subscription-alert">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-10 w-10 text-yellow-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3 flex-1">
        <h3 class="text-sm font-semibold text-yellow-800 mb-1">
          Estado de suscripción
        </h3>
        <p class="text-md text-yellow-700 text-pretty">
          <%= subscription_warning_message %>
        </p>
        <% if subscription_expired_recently? %>
          <p class="text-xs text-yellow-600 mt-2 font-medium">
            ⚠️ Período de gracia activo: Después de 30 días, tu carta será eliminada permanentemente.
          </p>
        <% end %>
        <% if subscription_blocked? %>
          <div class="mt-3 self-end">
            <%= link_to current_restaurant.has_valid_subscription? ? subscription_path : new_subscription_path,
                class: "bg-yellow-400 hover:bg-yellow-500 text-yellow-900 rounded-md px-4 py-2 text-sm font-medium transition-colors inline-block" do %>
              <%= current_restaurant.has_valid_subscription? ? "Gestionar Suscripción" : "Renovar Suscripción" %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="ml-4">
        <button type="button" class="text-yellow-400 hover:text-yellow-600 p-1" onclick="document.getElementById('subscription-alert').style.display='none'">
          <span class="sr-only">Cerrar</span>
          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
          </svg>
        </button>
      </div>
    </div>
  </div>
<% end %>
