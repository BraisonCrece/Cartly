<button type="button"
        class="absolute inline-flex items-center hidden px-3 py-2 text-sm text-gray-600 bg-gray-200 rounded-full top-5 left-5 gap-x-2 hover:bg-white/20"
        data-action="click->theme-switcher#toggle"
        data-theme-switcher-target="darkButton"
    >
  <%= image_tag "moon_2", class: "w-4 h-4", alt: t('.moon_icon') %>
  <%= t('.dark') %>
</button>

<button type="button"
        class="absolute inline-flex items-center hidden px-3 py-2 text-sm text-white rounded-full top-5 left-5 gap-x-2 bg-white/10 hover:bg-white/20"
        data-action="click->theme-switcher#toggle"
        data-theme-switcher-target="lightButton"
    >
  <%= image_tag "sun_2", class: "w-4 h-4", alt: t('.sun_icon') %>
  <%= t('.light') %>
</button>
