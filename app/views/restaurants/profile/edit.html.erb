<div class="min-h-[calc(100vh-8rem)] flex items-center justify-center px-4 py-8 w-full">
  <div class="w-full max-w-4xl">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white"><%= t('.title') %></h1>
    </div>

    <div class="bg-white dark:bg-gray-900 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
      <%= form_with(model: @restaurant,
          url: update_admin_profile_path,
          local: true,
          method: :patch,
          html: {
            class: 'p-4 pt-0 space-y-6'
          },
          data: { controller: "profile-logo" }) do |f| %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <%= render 'logo_input',
              form: f,
              field: :logo,
              label: "Logo principal",
              is_optional: false %>

          <%= render 'logo_input',
              form: f,
              field: :logo_white,
              label: "Logo blanco",
              is_optional: true %>
        </div>

        <div class="space-y-1">
          <%= f.label :name, t('.labels.name'),
              class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.text_field :name,
              class: "w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-gray-800 dark:text-white transition-colors",
              placeholder: t('.placeholders.name') %>
        </div>

        <div class="space-y-1">
          <%= f.label :province, t('.labels.province'),
              class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.select :province,
              options_for_select(provinces, @restaurant.province),
              { prompt: t('.select_province') },
              class: "w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-gray-800 dark:text-white transition-colors" %>
        </div>

        <div class="space-y-1">
          <%= f.label :city, t('.labels.city'),
              class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.text_field :city,
              class: "w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-gray-800 dark:text-white transition-colors",
              placeholder: t('.placeholders.city') %>
        </div>

        <div class="space-y-1">
          <%= f.label :address, t('.labels.address'),
              class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.text_field :address,
              class: "w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-gray-800 dark:text-white transition-colors",
              placeholder: t('.placeholders.address') %>
        </div>

        <div class="space-y-1">
          <%= f.label :phone, t('.labels.phone'),
              class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.telephone_field :phone,
              class: "w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-gray-800 dark:text-white transition-colors",
              placeholder: t('.placeholders.phone') %>
        </div>

        <div>
          <%= f.submit t('.save'),
              class: "w-full py-3 px-4 bg-sky-600 hover:bg-sky-700 focus:ring-4 focus:ring-sky-500 focus:ring-opacity-50 text-white font-medium rounded-lg transition-colors cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
