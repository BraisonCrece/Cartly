<div class="min-h-[calc(100vh-8rem)] flex items-center justify-center px-4 py-8 w-full">
  <div class="w-full max-w-4xl">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Perfil</h1>
    </div>

    <div class="bg-white dark:bg-gray-900 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
      <%= form_with(model: @restaurant,
          url: update_admin_profile_path,
          local: true,
          method: :patch,
          html: {
            class: 'p-4 pt-0 space-y-6'
          },
          data: { controller: "profile-logo" }) do |f| %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <%= render 'logo_input',
              form: f,
              field: :logo,
              label: "Logo principal",
              is_optional: false %>

          <%= render 'logo_input',
              form: f,
              field: :logo_white,
              label: "Logo blanco",
              is_optional: true %>
        </div>

        <div class="space-y-1">
          <%= f.label :name, 'Nombre',
              class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.text_field :name,
              class: "w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-gray-800 dark:text-white transition-colors",
              placeholder: 'El nombre del restaurante' %>
        </div>

        <div class="space-y-1">
          <%= f.label :province, 'Provincia',
              class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.select :province,
              options_for_select(provinces, @restaurant.province),
              { prompt: 'Seleccione una provincia' },
              class: "w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-gray-800 dark:text-white transition-colors" %>
        </div>

        <div class="space-y-1">
          <%= f.label :city, 'Ciudad',
              class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.text_field :city,
              class: "w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-gray-800 dark:text-white transition-colors",
              placeholder: 'Ingrese una ciudad' %>
        </div>

        <div class="space-y-1">
          <%= f.label :address, 'Dirección',
              class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.text_field :address,
              class: "w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-gray-800 dark:text-white transition-colors",
              placeholder: 'Ingrese una dirección' %>
        </div>

        <div class="space-y-1">
          <%= f.label :phone, 'Teléfono',
              class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.telephone_field :phone,
              class: "w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-gray-800 dark:text-white transition-colors",
              placeholder: 'Ingrese un teléfono' %>
        </div>

        <div>
          <%= f.submit 'Guardar cambios',
              class: "w-full py-3 px-4 bg-sky-600 hover:bg-sky-700 focus:ring-4 focus:ring-sky-500 focus:ring-opacity-50 text-white font-medium rounded-lg transition-colors cursor-pointer" %>
        </div>
      <% end %>

      <div class="px-8 py-6 bg-gray-50 dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700">
        <div class="text-center">
          <%= link_to "Volver", "javascript:history.back()",
              class: 'text-sky-600 hover:text-sky-700 font-medium transition-colors' %>
        </div>
      </div>
    </div>
  </div>
</div>
