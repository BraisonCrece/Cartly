<div class="container mx-auto py-6">
  <h1 class="text-3xl font-bold mb-6">Alérgenos</h1>
  <%= link_to "Agregar alérgeno", new_allergen_path, class: "inline-block px-4 py-2 leading-none border rounded text-white bg-blue-500 hover:bg-blue-600 mt-4 lg:mt-0" %>
  <% @allergens.each do |allergen| %>
    <div class="flex justify-between  bg-gray-100 rounded-lg p-4 mb-4 hover:bg-gray-200">
      <%= link_to allergen.name, allergen_path(allergen) , class: 'text-xl self-center'%>
      <%= image_tag allergen.icon if allergen.icon.attached? %>
    </div>
  <% end %>
</div>
