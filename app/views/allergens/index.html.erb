<div class='w-full max-w-3xl mx-auto p-3'>
  <div class="flex justify-center">
    <%= link_to "+", new_allergen_path, class: 'bg-blue-500 rounded-full hover:bg-blue-700 text-white font-bold py-2 px-4 mb-2 focus:outline-none focus:shadow-outline-blue focus:ring ring-blue-300 focus:border-blue-300 active:bg-blue-800' %>
  </div>
  <h1 class="text-3xl font-thin mb-6 text-center">Al√©rxenos</h1>
  <div class="py-6 grid auto-cols-max grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4 relative">
    <% @allergens.each do |allergen| %>
      <div class="bg-gray-100 dark:bg-gray-200 dark:text-gray-700 rounded-lg p-4 hover:bg-gray-200 flex justify-between items-center relative">
        <%= truncate(allergen.name, length: 10, separator: ' ', omission: '...') %>
        <%= image_tag allergen.icon, width: '50px' if allergen.icon.attached? %>
        <div class='absolute bottom-0 flex gap-2 left-2'>
          <%= button_to 'Editar', edit_allergen_path(allergen), data: { turbo: false }, class: 'text-xs font-thin text-blue-800 dark:text-blue-900 p-0', method: :get%>
          <%= button_to 'Eliminar', allergen_path(allergen), data: { turbo_confirm: 'Seguro que queres eliminar o allergeno?'}, class: 'text-xs font-thin text-red-800 dark:text-red-900 p-0', method: :delete %>
        </div>
      </div>
    <% end %>
  </div>
</div>
