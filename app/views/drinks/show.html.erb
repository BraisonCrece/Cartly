<%= turbo_frame_tag :modal do %>
    <div
        data-controller='modal'
        id='drink-modal'
        role="dialog"
        aria-labelledby="modal-titulo"
        aria-modal="true"
        class="fixed inset-0 z-20 flex items-center h-screen modal-container animate-fade-in-scale"
        data-action="click->modal#close">
        <!-- CARD -->
        <div
            class="w-[95%] max-w-2xl flex flex-col sm:flex-row sm:items-center sm:h-[280px] mx-auto bg-white rounded-lg overflow-hidden shadow-xl dark:bg-gray-800 dark:shadow dark:shadow-slate-200/20">
            <!-- PICTURE -->
            <div
                class="w-full h-48 grow-0 sm:h-full sm:w-72 skeleton skeleton-dark"
                data-modal-target="skeleton">
                <%= image_tag @drink.image.attached? ? @drink.image : "placeholder.webp",
                    class: "rounded-t-lg sm:rounded-none object-cover object-center w-full h-full wait",
                    data: { modal_target: "image" },
                    alt: t('.drink_photo', title: @drink.name || t('.default_photo')) %>
            </div>
            <!-- CARD BODY -->
            <div class="card__body h-full px-6 py-2 sm:max-w-[70%] flex flex-col justify-around">
                <!-- NAME -->
                <div
                    id="modal-titulo"
                    class="mb-2 text-2xl font-medium playfare skeleton skeleton-dark"
                    data-modal-target="skeleton">
                    <%= @drink.name %>
                </div>
                <!-- DESCRIPTION -->
                <p
                    class="w-full mb-2 text-gray-900 break-words lato skeleton skeleton-dark dark:text-slate-100"
                    data-modal-target="skeleton">
                    <%= @drink.description %>
                </p>
                <!-- FOOTER INFO -->
                <div class="flex items-center justify-between align-middle">
                    <!-- PRICE -->
                    <section class="flex gap-4">
                        <div
                            class="self-center block text-xl font-semibold skeleton skeleton-dark"
                            data-modal-target="skeleton"
                        >
                            <%= number_with_precision(@drink.price, precision: 2, separator: ",") %>
                            <small class='text-sm italic text-black duration-500 font-extralight place-self-end dark:text-white'>
                                â‚¬
                            </small>
                        </div>
                        <!-- QUANTITY -->
                        <% if @drink.measure.present? && @drink.unit.present? %>
                            <div
                                class="self-center block text-md font-light text-gray-500 skeleton skeleton-dark dark:text-gray-400"
                                data-modal-target="skeleton"
                            >
                                <%= @drink.measure %><%= @drink.unit %>
                            </div>
                        <% end %>
                    </section>

                    <!-- ALERGENS -->
                    <div
                        class="flex items-center gap-1 alergenos skeleton skeleton-dark"
                        data-modal-target="skeleton"
                    >
                        <% @drink.allergens.each do |allergen| %>
                            <span
                                class="inline-block py-1 tooltip"
                                data-controller="tooltip"
                                data-action="click->tooltip#toggle"
                                role="tooltip"
                            >
                                <%= image_tag allergen.icon.variant(:thumb),
                                    data: { modal_target: "image" },
                                    class: "w-8 h-8 opacity-70",
                                    alt: t('.allergen_icon', name: allergen.name) %>
                                <span
                                    class="shadow-xl tooltip-text"
                                    data-tooltip-target="text"
                                    role="tooltip">
                                    <%= allergen.name %>
                                </span>
                            </span>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% end %>
