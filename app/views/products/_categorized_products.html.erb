<% @categories.each do |category| %>
  <% products = @categorized_products[category.id] %>
  <% next if products.blank? %>
  <h2 class="px-4 pb-4 text-3xl font-semibold text-center text-red-300 dark:text-brand-300" id="category-<%= category.id %>"><%= translate("category.#{category.id}.name",category.name) %></h2>
  <% products.each do |product| %>
    <%= turbo_stream_from product %>

    <%= link_to build_link(product), data: { turbo_frame: "modal" } do %>
        <%= render "product", product: product %>
    <% end %>
  <% end %>
  <div class='py-3'></div>
<% end %>
