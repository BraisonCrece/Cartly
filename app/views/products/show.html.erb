<div class="max-w-lg mx-auto bg-white rounded-lg overflow-hidden shadow-lg">
  <div class="w-full">
    <%= image_tag @product.picture.variant(resize_to_limit: [500, nil]).processed, class: "w-full rounded-t-lg" %>
  </div>
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2"><%= @product.title %></div>
    <p class="text-gray-700 text-base mb-4"><%= @product.description %></p>
    <div class="flex justify-between items-center">
      <div class="font-bold text-xl self-end"><%= number_to_currency(@product.prize, unit: 'â‚¬', separator: ',') %></div>
      <div class="flex alergenos">
        <% @product.allergens.each do |allergen| %>
          <span class="inline-block px-3 py-1 mr-2">
            <%= image_tag allergen.icon, width: "35px" %>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</div>
