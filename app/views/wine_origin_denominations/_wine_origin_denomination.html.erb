<%= turbo_frame_tag wine_origin_denomination do %>
  <div class="flex justify-between items-center px-6 py-4 hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
    <h2 class="text-lg font-medium text-gray-900 dark:text-white"><%= wine_origin_denomination.name %></h2>

    <div class="flex items-center space-x-3">
      <%= link_to edit_admin_denomination_path(wine_origin_denomination),
          class: "p-2 text-gray-400 hover:text-sky-600 dark:hover:text-sky-400 transition-colors",
          aria_label: "Editar denominación" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24">
          <g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
            <path d="m16.475 5.408l2.117 2.117m-.756-3.982L12.109 9.27a2.1 2.1 0 0 0-.58 1.082L11 13l2.648-.53c.41-.082.786-.283 1.082-.579l5.727-5.727a1.853 1.853 0 1 0-2.621-2.621"/>
            <path d="M19 15v3a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V7a2 2 0 0 1 2-2h3"/>
          </g>
        </svg>
      <% end %>

      <%= link_to admin_denomination_path(wine_origin_denomination),
          data: {
            turbo_method: :delete,
            turbo_confirm: "¿Estás seguro de que deseas eliminar esta denominación?"
          },
          class: "p-2 text-gray-400 hover:text-red-600 dark:hover:text-red-400 transition-colors",
          aria_label: "Eliminar denominación" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24">
          <path fill="currentColor" d="M7 4a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v2h4a1 1 0 1 1 0 2h-1.069l-.867 12.142A2 2 0 0 1 17.069 22H6.93a2 2 0 0 1-1.995-1.858L4.07 8H3a1 1 0 0 1 0-2h4zm2 2h6V4H9zM6.074 8l.857 12H17.07l.857-12zM10 10a1 1 0 0 1 1 1v6a1 1 0 1 1-2 0v-6a1 1 0 0 1 1-1m4 0a1 1 0 0 1 1 1v6a1 1 0 1 1-2 0v-6a1 1 0 0 1 1-1"/>
        </svg>
      <% end %>
    </div>
  </div>
<% end %>