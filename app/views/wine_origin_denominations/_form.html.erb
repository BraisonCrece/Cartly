<%= turbo_frame_tag @form_frame_tag, class: "pb-4" do %>
  <div class="space-y-4">
    <%= form_with model: WineOriginDenomination.new, url: admin_denominations_path, class: "space-y-4" do |f| %>
      <div class="space-y-1">
        <%= f.label :name, "Añadir Denominación de Origen", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= f.text_field :name,
            class: "w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500 dark:bg-gray-800 dark:text-white transition-colors",
            placeholder: "Introduce el nombre de la denominación" %>
      </div>

      <div class="flex">
        <%= f.submit "Añadir denominación",
            class: "py-3 px-6 bg-sky-600 hover:bg-sky-700 focus:ring-4 focus:ring-sky-500 focus:ring-opacity-50 text-white font-medium rounded-lg transition-colors cursor-pointer w-full" %>
      </div>
    <% end %>
  </div>
<% end %>
