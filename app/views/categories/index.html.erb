<section class='flex flex-col gap-3 w-full px-6 max-w-2xl' data-controller="sortable">
    <h1 class="text-center font-bold text-3xl mb-10">Categorías</h1>

    <div class="flex flex-col gap-3 mb-10">
        <section class='flex gap-4 justify-between mb-2'>
            <h1 class="text-3xl font-thin text-center font-roboto underline-offset-[.25rem] underline"> Carta </h1>
            <%= render "shared/add_button", path: new_category_path(type: "menu") %>
        </section>
        <div class="flex flex-col gap-3" data-sortable-target="menuList">
            <%= render @categories.menu.order(:position) %>
        </div>
    </div>

    <div class="flex flex-col gap-3 mb-10">
        <section class="flex gap-4 justify-between mb-2">
            <h1 class="text-3xl font-thin text-center font-roboto underline-offset-[.25rem] underline"> Menú do día </h1>
            <%= render "shared/add_button", path: new_category_path(type: "daily") %>
        </section>
        <div class="flex flex-col gap-3" data-sortable-target="dailyList">
            <%= render @categories.daily.order(:position) %>
        </div>
    </div>
</section>
