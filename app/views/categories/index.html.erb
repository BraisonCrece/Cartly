<section class='flex flex-col gap-3 w-full px-6 mb-20' data-controller="sortable categories">
    <h1 class="text-center font-bold text-3xl mb-10">Categorias</h1>
    <!-- Form -->
    <%= render "form" %>

    <!-- Menu List -->
    <div class="flex flex-col gap-3 mb-10">
        <section class='flex gap-4 justify-between mb-2'>
            <h1 class="text-3xl font-thin text-center font-roboto underline-offset-[.25rem] underline decoration-brand-red">
                Carta
            </h1>
        </section>
        <%= turbo_frame_tag @menu_list_frame_tag, class: "flex flex-col gap-3", data: { sortable_target: "menuList" } do %>
            <%= render @categories.menu.order(:position) %>
        <% end %>
    </div>

    <!-- Daily Menu List -->
    <div class="flex flex-col gap-3 mb-10">
        <section class="flex gap-4 justify-between mb-2">
            <h1 class="text-3xl font-thin text-center font-roboto underline-offset-[.25rem] underline decoration-brand-red">
              MenÃº del dia
            </h1>
        </section>
        <%= turbo_frame_tag @daily_list_frame_tag, class: "flex flex-col gap-3", data: { sortable_target: "dailyList" } do %>
            <%= render @categories.daily.order(:position) %>
        <% end %>
    </div>

    <!-- Drinks List -->
    <div class="flex flex-col gap-3 mb-10">
        <section class="flex gap-4 justify-between mb-2">
            <h1 class="text-3xl font-thin text-center font-roboto underline-offset-[.25rem] underline decoration-brand-red">
                Bebidas
            </h1>
        </section>
        <%= turbo_frame_tag @drinks_list_frame_tag, class: "flex flex-col gap-3", data: { sortable_target: "drinksList" } do %>
            <%= render @categories.drinks.order(:position) %>
        <% end %>
    </div>
</section>
