<div class="min-h-[calc(100vh-8rem)] px-4 py-8 w-full" data-controller="sortable categories">
  <div class="w-full max-w-6xl mx-auto">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Categorías</h1>
    </div>

    <div class="bg-white dark:bg-gray-900 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden mb-8">
      <div class="p-6">
        <%= render "form", selected_category_type: @selected_category_type %>
      </div>
    </div>

    <div class="space-y-8">
      <!-- Menu Categories -->
      <div class="bg-white dark:bg-gray-900 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Platos de la Carta</h2>
        </div>
        <%= turbo_frame_tag @menu_list_frame_tag, class: "divide-y divide-gray-200 dark:divide-gray-700", data: { sortable_target: "menuList" } do %>
          <%= render @menu_categories.order(:position) %>
        <% end %>
      </div>

      <!-- Drinks Categories -->
      <div class="bg-white dark:bg-gray-900 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Bebidas de la Carta</h2>
        </div>
        <%= turbo_frame_tag @drinks_list_frame_tag, class: "divide-y divide-gray-200 dark:divide-gray-700", data: { sortable_target: "drinksList" } do %>
          <%= render @drinks_categories.order(:position) %>
        <% end %>
      </div>

      <!-- Daily Menu Categories -->
      <div class="bg-white dark:bg-gray-900 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Platos del Menú del día</h2>
        </div>
        <%= turbo_frame_tag @daily_list_frame_tag, class: "divide-y divide-gray-200 dark:divide-gray-700", data: { sortable_target: "dailyList" } do %>
          <%= render @daily_categories.order(:position) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
